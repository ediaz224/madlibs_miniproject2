lname = input("Enter your last name: ")
ptverb = input("Enter a past tense verb: ")
family_member = input("Enter a family member i.e mom, dad: ")
verb = input("Enter a verb: ")

print("Hello my name is " +fname+ " " +lname+ ".")
print("You " +ptverb+ " my " +family_member+ ".")
print("Prepare to " +verb+ "!")


